package antgame;

import java.util.ArrayList;
import org.junit.After;
import org.junit.AfterClass;
import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;
import static org.junit.Assert.*;

/**
 *
 * @author hn66
 */
public class AntHillTest {
    
    public AntHillTest() {
    }
    
    @BeforeClass
    public static void setUpClass() {
    }
    
    @AfterClass
    public static void tearDownClass() {
    }
    
    @Before
    public void setUp() {
    }
    
    @After
    public void tearDown() {
    }

    /**
     * Test of getColor method, of class AntHill.
     * pass if return the color assigned to the ant hill
     */
    @Test
    public void testGetColor() {
        System.out.println("getColor");
        Color c = Color.RED;
        Cell[][] cell_list = new Cell[100][100];
        ArrayList<Ant> ant = new ArrayList<>();
        World world = new World(cell_list, ant);
        AntHill instance = new AntHill(world, new Cell(0,1), c);
        Color expResult = c;
        Color result = instance.getColor();
        assertEquals(expResult, result);
    }

    /**
     * Test of getCell method, of class AntHill.
     * pass if return the correct cell
     */
    @Test
    public void testGetCell() {
        System.out.println("getCell");
        Color c = Color.RED;
        Cell ce = new Cell(0, 1);
        Cell[][] cell_list = new Cell[100][100];
        ArrayList<Ant> ant = new ArrayList<>();
        World world = new World(cell_list, ant);
        AntHill instance = new AntHill(world, ce, c);
        Cell expResult = ce;
        Cell result = instance.getCell();
        assertEquals(expResult, result);
    }
}
